    <body>
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe
            src="https://www.googletagmanager.com/ns.html?id=GTM-NP7VRXHK"
            height="0"
            width="0"
            style="display:none;visibility:hidden"
            >
            </iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->
    <ClientRouter />

    <slot />
    {!Astro.url.pathname.includes("docs") && <Footer />}
</body>
</html>

<style>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        background-color: #080808;
        color: #9e9e9e;
        font-family: "Poppins", sans-serif;
    }
    h1 {
        font-size: 3rem;
        font-weight: bold;
        color: #fff;
    }
</style>
