</main>

        <style is:global>
            pre[style*="background-color"] {
                background-color: rgba(0, 0, 0, 0.3) !important;
                backdrop-filter: blur(8px);
                border-radius: 0.1rem;
            }
            code .line {
                background-color: rgba(255, 255, 255, 0.1) !important;
                display: inline-block;
                width: 100%;
                margin-bottom: 0.2rem;
                border-radius: 0.3rem;
                user-select: all;
            }
            code .line:last-child {
                margin-top: 0.2rem;
            }
            .animate-fade-in {
                animation: fade-in 0.7s cubic-bezier(0.16, 1, 0.3, 1);
            }

            aside {
                scrollbar-width: none;
                -ms-overflow-style: none;
            }
            aside::-webkit-scrollbar {
                display: none;
            }
            .img-zoom-modal {
                display: flex;
                align-items: center;
                justify-content: center;
                position: fixed;
                z-index: 1000;
                left: 0;
                top: 0;
                width: 100vw;
                height: 100vh;
                background: rgba(0,0,0,0.85);
                backdrop-filter: blur(2px);
                transition: opacity 0.2s;
            }
            .img-zoom-modal.hidden {
                display: none;
            }
            .img-zoomed {
                max-width: 90vw;
                max-height: 85vh;
                border-radius: 1.5rem;
                box-shadow: 0 8px 32px 0 rgba(0,0,0,0.35);
                animation: img-zoom-in 0.25s cubic-bezier(0.16, 1, 0.3, 1);
                background: #222;
            }
            @keyframes img-zoom-in {
                from { transform: scale(0.7); opacity: 0; }
                to { transform: scale(1); opacity: 1; }
            }
        </style>

        <script is:inline>
            const setupMobileMenu = () => {
                const mobileMenuButton =
                    document.getElementById("mobile-menu-button");
                const sidebar = document.getElementById("docs-sidebar");
                const backdrop = document.getElementById("sidebar-backdrop");

                if (!mobileMenuButton || !sidebar || !backdrop) return;

                let isOpen = false;

                const toggleMenu = () => {
                    if (isOpen) {
                        closeMenu();
                    } else {
                        openMenu();
                    }
                    isOpen = !isOpen;
                };

                const openMenu = () => {
                    sidebar.classList.remove("-translate-x-full");
                    backdrop.classList.remove("hidden");
                    document.body.classList.add("overflow-hidden");
                    mobileMenuButton.setAttribute("aria-expanded", "true");
                    sidebar.setAttribute("aria-hidden", "false");
                };
                const closeMenu = () => {
                    sidebar.classList.add("-translate-x-full");
                    backdrop.classList.add("hidden");
                    document.body.classList.remove("overflow-hidden");
                    mobileMenuButton.setAttribute("aria-expanded", "false");
                    sidebar.setAttribute("aria-hidden", "true");
                };

                mobileMenuButton.addEventListener("click", toggleMenu);
                backdrop.addEventListener("click", closeMenu);

                sidebar.querySelectorAll("a").forEach((link) => {
                    link.addEventListener("click", () => {
                        if (window.innerWidth < 1024) {
                            closeMenu();
                        }
                    });
                });

                window.addEventListener("resize", () => {
                    if (window.innerWidth >= 1024) {
                        sidebar.classList.remove("-translate-x-full");
                        backdrop.classList.add("hidden");
                        document.body.classList.remove("overflow-hidden");
                        mobileMenuButton.setAttribute("aria-expanded", "false");
                        sidebar.setAttribute("aria-hidden", "false");
                        isOpen = false;
                    } else if (isOpen === false) {
                        sidebar.classList.add("-translate-x-full");
                    }
                });

                document.addEventListener("keydown", (e) => {
                    if (e.key === "Escape") closeMenu();
                });
            };

            // run the setup function on initial load
            setupMobileMenu();

            // run it again whenever the page navigates
            document.addEventListener("astro:page-load", setupMobileMenu);
            // run the setup for image zoom
            function setupImageZoom() {
                const modal = document.getElementById('img-zoom-modal');
                const modalImg = document.getElementById('img-zoomed');
                if (!modal || !modalImg) return;
                const content = document.querySelector('.prose');
                if (!content) return;
                content.querySelectorAll('img').forEach(img => {
                    img.style.cursor = 'zoom-in';
                    img.addEventListener('click', function () {
                        modalImg.src = img.src;
                        modal.classList.remove('hidden');
                    });
                });
                modal.onclick = (e) => {
                    if (e.target === modal) {
                        modal.classList.add('hidden');
                        modalImg.src = '';
                    }
                };
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'Escape') {
                        modal.classList.add('hidden');
                        modalImg.src = '';
                    }
                });
            }
            setupImageZoom();
            document.addEventListener('astro:page-load', setupImageZoom);

            // scroll to id on load
            function scrollToHash() {
                if (window.location.hash) {
                    setTimeout(() => {
                        const el = document.getElementById(window.location.hash.substring(1));
                        if (el) {
                            el.scrollIntoView({ behavior: 'smooth', block: 'start' });
                        }
                    }, 60);
                }
            }
            scrollToHash();
            document.addEventListener('astro:page-load', scrollToHash);
        </script>
    </div>
</BaseLayout>
