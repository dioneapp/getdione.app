				img.style.cursor = 'zoom-in';
				img.addEventListener('click', function () {
					modalImg.src = img.src;
					modal.classList.remove('hidden');
				});
			});
			
			modal.onclick = (e) => {
				if (e.target === modal) {
					modal.classList.add('hidden');
					modalImg.src = '';
				}
			};
			
			document.addEventListener('keydown', (e) => {
				if (e.key === 'Escape') {
					modal.classList.add('hidden');
					modalImg.src = '';
				}
			});
